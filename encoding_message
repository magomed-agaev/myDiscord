import base64
import emoji
msg = input("message : ")
def encodage(msg:str):
    data = msg.encode('utf-8')
    encoded_data = base64.b64encode(data)
    return encoded_data

def decodage(msg):
    data = msg.decode('utf-8')
    encoded_data = base64.b64decode(data)
    return encoded_data

msg2 = emoji.demojize(msg)
print(msg2)
encodage(msg2)
print(encodage(msg2))
decodage_ = decodage(encodage(msg2))
emojis = emoji.emojize(msg2)
print(emojis)

